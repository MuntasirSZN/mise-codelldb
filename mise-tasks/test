#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force codelldb .
mise cache clear
mise install codelldb@latest

# Capture and display the output while also verifying it
# Sanity check that adapter binary exists and runs
mise exec "codelldb@latest" -- bash -lc "test -x '$(mise where codelldb@latest)/bin/codelldb' || test -x '$(mise where codelldb@latest)/bin/codelldb.exe'"
mise exec "codelldb@latest" -- bash -lc "'$(mise where codelldb@latest)/bin/codelldb' --help >/dev/null 2>&1 || true"
echo "âœ“ Tests passed"
